<html>
  <%- include('../parts/head') %>

  <body>
    <%- include('../parts/header') %>

    <div class="container">
      <table class="grid">
        <thead>
          <tr class="titulos">
            <th>ID</th>
            <th>Nome</th>
            <th colspan="3">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% competencias.forEach(competencia => { %>
          <tr class="conteudo">
            <td><%= competencia.id %></td>
            <td><%= competencia.nome %></td>
            <td>
              <a href="/admin/competencias/ver/<%= competencia.id %>/"
                ><button class="ver">Ver</button></a
              >
              <a href="/admin/competencias/editar/<%= competencia.id %>"
                ><button class="editar">Editar</button></a
              >
              <a href="/admin/competencias/excluir/<%= competencia.id %>"
                ><button class="excluir">Excluir</button></a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <%- include('../parts/footer') %> 
  </body>
</html>